{
    "manifest_version": 2,
    "name": "HistoryLink SmartCopy",
    "description": "Copies Smart Match profiles from MyHeritage to Geni.",
    "version": "0.1.2",
    "icons": { "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png" },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },

    "permissions": ["tabs", "storage",
        "*://www.geni.com/",
        "*://historylink.herokuapp.com/",
        "*://www.myheritage.com/",
        "*://maps.googleapis.com/"
    ]
}
